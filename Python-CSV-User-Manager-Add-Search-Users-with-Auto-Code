import csv

md = {}

# READ FILE
with open('users2.csv')as u:
    content = u.readlines()
    filds = content[0][:-1].split(',')
# print(filds)
def inputf():

    code = 1
    while True:
        l = []
        conti = input('add user:')
        if conti == 'y':
            for i in filds:
                inp  = input(f'enter {i}: ')
                l.append(inp)
            with open('users2.csv', mode='a',newline='') as f:
                w = csv.writer(f)
                w.writerow(l)

        elif conti == 'n':
            break
        else:
            print('invalid input!1')
            pass

