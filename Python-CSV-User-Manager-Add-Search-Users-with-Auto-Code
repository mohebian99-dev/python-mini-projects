def useaarch():
    while True:
        conti = input('search?(y/n): ')
        if conti == 'y':
            with open('users2.csv') as f:
                d = list(csv.DictReader(f))
            tsearch = input(f'enter type of search{filds}')
            if tsearch in filds:
                fild = input(f'enter {tsearch}: ')
                for i in d:
                    if i[tsearch]==fild:
                        print(i)

            else:
                print('fild not found!!')

        elif conti =='n':
            break
        else:
            print('invalid input!!')
            pass
inputf()
useaarch()
